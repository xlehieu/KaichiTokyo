@model List<WebsiteKaichiTokyo.ViewModels.CartItem>
<div>
    <h2 class="text-primary text-center bold">Giỏ hàng</h2>
</div>
@section Styles{
    <style>
        .big-icon {
            font-size: 20px;
            padding-right: 5px;
        }
    </style>
}
@if (Model != null && Model.Count > 0)
{
    <div class="row mt-3">
        <div class="col-lg-12">
            <a href="/San-pham" class="text-primary"><i class="fa fa-shopping-bag big-icon"></i>Tiếp tục mua hàng</a>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-lg-12">
            <div class="mini__cart__table">
                <div class="table-reponsive">
                    <table style="font-size:16px" class="table table-borderless">
                        <thead style="font-size:14px">
                            <tr>
                                <th class="text-center">Sản phẩm</th>
                                <th class="text-center pl-3">Giá</th>
                                <th class="text-center pl-3">Số lượng</th>
                                <th class="text-center pl-3">Tổng tiền</th>
                                <th class="text-center pl-3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="mini__cart__item">
                                        <img src="~/images/products/@item.Product.Thumb" width="70px" height="70px" style="border-radius:50%" alt="@item.Product.Title">
                                        <h6 style="width:70px">@item.Product.ProductName</h6>
                                    </td>
                                    <td class="mini__cart__price">
                                        @item.Product.Price.Value.ToString("#,##0")
                                    </td>
                                    <td class="mini__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty" style="width:80px;height:30px">
                                                <span class="minus" data-productid="@item.Product.ProductId">-</span>
                                                <input class="cartItemSoLuong-@item.Product.ProductId" data-productid="@item.Product.ProductId" name="cartItemSoLuong" type="text" value="@item.Amount">
                                                <span class="plus" data-productid="@item.Product.ProductId">+</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="mini__cart__total">
                                        @item.TotalMoney.ToString("#,##0")
                                    </td>
                                    <td class="mini__cart__item__close">
                                        <span class="icon_close big-icon removeItem" style="cursor:pointer" data-productid="@item.Product.ProductId"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-2 pl-2">
        <p>Tổng tiền: <span class="total-checkout-minicart">@Model.Sum(x=>x.TotalMoney).ToString("N0")đ</span></p>
    </div>
    <div class="row mt-3 pl-2">
        <a href="/Thanh-toan-gio-hang" class="site-btn">THANH TOÁN</a>
    </div>
}
else
{
    <div class="row mt-3">
        <div class="col-lg-12">
            <p>Bạn chưa có sản phẩm nào trong giỏ hàng</p>
            <a href="/San-pham" class="text-primary"><i class="fa fa-shopping-bag big-icon"></i>Đi mua hàng</a>
        </div>
    </div>
}