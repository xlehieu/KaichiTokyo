@section Scripts{
    <script>
        $(document).ready(function () {
            $("input[type='checkbox'][name='cats']").on("change", function () {
                var selectCategory = $("input[type='checkbox'][name='cats']:checked").map(function () {
                    return $(this).val();
                }).get();
                if (selectCategory.length > 0) {
                    $.ajax({
                        url: '/SearchProduct/FilterProduct',
                        type: 'post',
                        datatype: 'json',
                        data: {
                            catId: selectCategory,
                        },
                        async: true,
                        success: function (result) {
                            $("#filter__product__result").html('');
                            $("#filter__product__result").html(result);
                        },
                        error: function (err) {
                            console.log(err);
                            alert("Lỗi");
                        }
                    });
                }
                else {
                    location.reload();
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {


            if ($('.bbb_viewed_slider').length) {
                var viewedSlider = $('.bbb_viewed_slider');

                viewedSlider.owlCarousel(
                    {
                        loop: true,
                        margin: 30,
                        autoplay: true,
                        autoplayTimeout: 6000,
                        nav: false,
                        dots: false,
                        responsive:
                        {
                            0: { items: 1 },
                            575: { items: 2 },
                            768: { items: 3 },
                            991: { items: 4 },
                            1199: { items: 6 }
                        }
                    });

                if ($('.bbb_viewed_prev').length) {
                    var prev = $('.bbb_viewed_prev');
                    prev.on('click', function () {
                        viewedSlider.trigger('prev.owl.carousel');
                    });
                }

                if ($('.bbb_viewed_next').length) {
                    var next = $('.bbb_viewed_next');
                    next.on('click', function () {
                        viewedSlider.trigger('next.owl.carousel');
                    });
                }
            }


        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.js"></script>
}