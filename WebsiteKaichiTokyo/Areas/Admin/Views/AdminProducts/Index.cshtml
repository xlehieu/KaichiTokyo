@using PagedList.Core.Mvc
@model PagedList.Core.PagedList<WebsiteKaichiTokyo.Models.Product>
@{
    int currentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách sản phẩm trang: " + currentPage;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="section-header">
    <h1>Danh sách sản phẩm</h1>
</div>
<div class="section-body">
    <div class="card card-info">
        <div class="card-header">
            <h4>Danh sách sản phẩm: trang @currentPage</h4>
            <div class="card-header-action">
                <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Create" class="btn btn-outline-primary"><i class="fa fa-plus-square" style="margin-right:3px"></i>Thêm sản phẩm</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-6">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fa fa-search"></i>
                            </div>
                        </div>
                        <input type="text" id="keyword" name="keyword" placeholder="Tìm kiếm sản phẩm" class="form-control">
                    </div>
                </div>
                <div class="form-group col-6">
                    <select class="form-control form-control-sm" id="catFilter" asp-items="ViewBag.CatId">
                        <option selected>Chọn danh mục</option>
                        <option value="0">Chọn tất cả</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-md">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Danh mục</th>
                            <th class="width-column-table">Tên</th>
                            <th>Giá</th>
                            <th>Ảnh</th>
                            <th>Trạng thái</th>
                            <th>Tồn kho</th>
                            <th class="text-center"><i class="fas fa-th"></i></th>
                        </tr>
                    </thead>
                    <tbody id="records_table">
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem=>item.ProductId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Cat.CatName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    <td><img class="rounded-circle" width="35" height="35" data-toggle="tooltip" title="" data-original-title="@item.ProductName" src="~/images/products/@item.Thumb" /></td>
                                    @if (item.Active)
                                    {
                                        <td>
                                            <div class="badge badge-success">Hoạt động</div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <div class="badge badge-danger">Không hoạt động</div>
                                        </td>
                                    }
                                    <td>@Html.DisplayFor(modelItem=>item.UnitInstock)</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ProductId"><i class="fa fa-pencil space-icon"></i>Sửa</a>
                                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ProductId"><i class="fa fa-eye space-icon"></i>Chi tiết</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId"><i class="fa fa-trash space-icon"></i>Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div aria-label="Page navigation example" class="card-footer text-right">
                <nav class="d-inline-block">
                    <ul class="pagination mb-0">
                        <pager list="@Model" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" />
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#keyword').keyup(function (e) {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: '/Admin/Search/FindProduct',
                    datatype: 'json',
                    type: 'Post',
                    data: {
                        keyword: strkeyword
                    },
                    async: true,
                    success: function (results) {
                        $('#records_table').html("");
                        $('#records_table').html(results);
                        console.log(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    },
                });
            });
            $('#catFilter').change(function () {
                var catId = $('#catFilter').children(":selected").attr("value");
                catId = parseInt(catId);
                $('#catFilter option').removeAttr("selected");
                $('#catFilter > [value=' + catId + ']').attr("selected", "true");
                $.ajax({
                    type: 'Get',
                    url: '/Admin/AdminProducts/CatFilter',
                    datatype: 'json',
                    data: {
                        catId: catId
                    },
                    async: true,
                    success: function (result) {
                        if (result.status == "success") {
                            window.location.href = result.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert("Lỗi");
                    }
                })
            })
        });
    </script>
}