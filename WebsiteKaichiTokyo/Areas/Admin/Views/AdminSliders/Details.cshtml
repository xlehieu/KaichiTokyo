@model WebsiteKaichiTokyo.Models.Slider

@{
    ViewData["Title"] = "Chi tiết slide "+ Model.SliderName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="section-header">
    <h1>Chi tiết slide @Model.SliderName</h1>
</div>
<div class="section-body">
    <div class="card card-warning">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-dark table-md">
                    <tr>
                        <td>Mã slide:</td>
                        <td class="text-dark">@Model.SliderId</td>
                    </tr>
                    <tr>
                        <td>Tên slide:</td>
                        <td class="text-dark">@Model.SliderName</td>
                    </tr>
                    <tr>
                        <td>Hình ảnh:</td>
                        <td>
                            <img width="200" height="200" src="~/images/products/@Model.Thumb" alt="@Model.SliderName" />
                        </td>
                    </tr>
                    <tr>
                        <td>Hoạt động:</td>
                        <td>
                            @if (Model.Active)
                            {
                                <input type="checkbox" checked="" />
                            }
                            else
                            {
                                <input type="checkbox" />
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Hiển thị trang chủ:</td>
                        <td>
                            @if (Model.HomeFlag)
                            {

                                <input type="checkbox" checked="" />
                            }
                            else
                            {
                                <input type="checkbox" />
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Đường dẫn
                        </td>
                        <td>
                            @Model.Alias
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.SliderId"><i class="fa fa-pencil space-icon"></i>Chỉnh sửa</a>
            <a class="btn btn-dark" asp-action="Index"><i class="fa fa-reply space-icon"></i>Quay lại</a>
        </div>
    </div>
</div>