        <div class="sidebar-brand">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index"><img class="header__logo" src="~/img/logo.png"/></a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a asp-area ="Admin" asp-controller="Home" asp-action="Index">KT</a>
        </div>
        <ul class="sidebar-menu" id="ul__active">
            <li class="menu-header">Dashboard</li>
            <li><a class="nav-link" href="/Admin/Home"><i class="fa fa-tachometer"></i><span>Dashboard</span></a></li>
            <li class="menu-header">Quản lý hệ thống</li>
            <li><a asp-controller="AdminAccounts" asp-action="Index" class="nav-link"><i class="fas fa-users"></i> <span>Thông tin tài khoản</span></a></li>
            <li><a asp-controller="AdminRoles" asp-action="Index" class="nav-link"><i class="fa fa-user"></i> <span>Thông tin quyền truy cập</span></a></li>
            <li class="menu-header">Quản lý sản phẩm</li>
