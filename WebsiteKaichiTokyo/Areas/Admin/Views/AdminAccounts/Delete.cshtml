@model WebsiteKaichiTokyo.Models.Account

@{
    ViewData["Title"] = "Xóa thông tin tài khoản " + Model.Email;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="section-header">
    <h1>Bạn có muốn xóa tài khoản @Model.Email</h1>
</div>
<div class="section-body">
    <div class="card card-danger">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-dark">
                    <tr>
                        <td>ID:</td>
                        <td>@Html.DisplayFor(model=>model.AccountId)</td>
                    </tr>
                    <tr>
                        <td>Họ và tên:</td>
                        <td>@Html.DisplayFor(model=>model.FullName)</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td>@Html.DisplayFor(model=>model.Phone)</td>
                    </tr>
                    <tr>
                        <td>Họ và tên:</td>
                        <td>@Html.DisplayFor(model=>model.FullName)</td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td>@Html.DisplayFor(model=>model.Email)</td>
                    </tr>
                    <tr>
                        <td>Mật khẩu:</td>
                        <td>@Html.DisplayFor(model=>model.Password)</td>
                    </tr>
                    <tr>
                        <td>Trạng thái:</td>
                        <td>
                            @if (Model.Active)
                            {
                                <div class="badge badge-success">Hoạt động</div>
                            }
                            else
                            {
                                <div class="badge badge-danger">Không hoạt động</div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Lần đăng nhập cuối:</td>
                        <td>@Html.DisplayFor(model=>model.LastLogin)</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo:</td>
                        <td>@Html.DisplayFor(model=>model.CreateDate)</td>
                    </tr>
                    <tr>
                        <td>Quyền truy cập:</td>
                        <td>@Html.DisplayFor(model=>model.Role.RoleName)</td>
                    </tr>
                </table>
            </div>
        </div>
        <form asp-action="Delete">
            <input asp-for="AccountId" type="hidden" />
            <button class="btn btn-danger" type="submit"><i class="fa fa-trash space-icon"></i>Xóa</button>
            <a asp-action="Index" class="btn btn-dark"><i class="fa fa-reply space-icon"></i>Quay lại</a>
        </form>
    </div>
</div>
