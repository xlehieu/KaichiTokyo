@using PagedList.Core.Mvc
@model PagedList.Core.PagedList<WebsiteKaichiTokyo.Models.Account>
@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int currentPage = ViewBag.CurrentPage;
}
<div class="section-header">
    <h1>Danh sách tài khoản</h1>
</div>
<div class="section-body">
    <div class="card card-info">
        <div class="card-header">
            <h4>Danh sách tải khoản: trang @currentPage</h4>
            <div class="card-header-action">
                <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Create" class="btn btn-outline-primary"><i class="fa fa-user-plus space-icon"></i>Thêm tài khoản</a>
            </div>
        </div>
        <div class="card-header">
            <div class="form-group">
                <select class="form-control" id="idrole" name="idrole" asp-items="ViewBag.QuyenTruyCap">
                    <option disabled selected>Chọn quyền truy cập</option>
                    <option value="0">Chọn tất cả</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control" id="status" name="status" asp-items="ViewBag.TrangThai">
                    <option disabled selected>Trạng thái</option>
                    <option value="0">Chọn tất cả</option>
                </select>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-md">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ và tên</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Trạng thái</th>
                            <th>Quyền truy cập</th>
                            <th class="text-center"><i class="fas fa-th"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem=>item.AccountId)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    @if (item.Active)
                                    {
                                        <td><div class="badge badge-success">Hoạt động</div></td>
                                    }
                                    else
                                    {
                                        <td><div class="badge badge-danger">Bị chặn</div></td>
                                    }
                                    <td>@Html.DisplayFor(modelItem=>item.Role.Description)</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.AccountId"><i class="fa fa-pencil space-icon"></i>Sửa</a>
                                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.AccountId"><i class="fa fa-eye space-icon"></i>Chi tiết</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AccountId"><i class="fa fa-trash space-icon"></i>Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div aria-label="Page navigation example" class="card-footer text-right">
                <nav class="d-inline-block">
                    <ul class="pagination mb-0">
                        <pager list="@Model" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index"></pager>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#idrole").change(function () {
                debugger
                var RoleId = $("#idrole").children(":selected").attr("value");
                RoleId = parseInt(RoleId);
                $('#idrole option').removeAttr('selected');
                $("#idrole > [value=" + RoleId + "]").attr("selected", "true");
                $.ajax({
                    type: 'GET',
                    url: '/Admin/AdminAccounts/FilterRole',
                    datatype: 'json',
                    data: {
                        RoleId: RoleId
                    },
                    async: true,
                    success: function (result) {
                        if (result.status = "success") {
                            window.location.href = result.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert("error");
                    }
                })
            });
            $("#status").change(function () {
                debugger
                var Status = $("#status").children(":selected").attr("value");
                Status = parseInt(Status);
                $("#status option").removeAttr("selected");
                $("#status > [value=" + Status + "]").attr("selected", "true");
                $.ajax({
                    type: "GET",
                    url: '/Admin/AdminAccounts/FilterStatus',
                    datatype: 'json',
                    data: {
                        Status: Status,
                    },
                    async: true,
                    success: function (result) {
                        if (result.status = "success") {
                            window.location.href = result.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert("error");
                    }
                })
            })
        })
    </script>
}