@using PagedList.Core.Mvc
@model PagedList.Core.PagedList<WebsiteKaichiTokyo.Models.Category>
@{
    int currentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách danh mục " + currentPage;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="section-header">
    <h1>Danh sách danh mục</h1>
</div>
<div class="section-body">
    <div class="card card-info">
        <div class="card-header">
            <h4>Danh sách danh mục: trang @currentPage</h4>
            <div class="card-header-action">
                <a class="btn btn-outline-primary" asp-controller="AdminCategories" asp-action="Create"><i class="fa fa-plus-square space-icon"></i>Thêm danh mục</a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-md">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên danh mục</th>
                            <th>Danh mục cha</th>
                            <th>Ảnh</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                string url = $"/{item.Alias}";
                                <tr>
                                    <td>@Html.DisplayFor(modelItem=>item.CatId)</td>
                                    <td><a target="_blank" href="@url">@item.CatName</a></td>
                                    @if (item.CatParentName != null)
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.CatParentName)</td>

                                    }
                                    else
                                    {
                                        <td>Không</td>
                                    }
                                    <td>
                                        <img class="rounded-circle" width="35" height="35" data-toggle="tooltip" title="" data-original-title="@item.Title" src="~/images/categories/@item.Thumb" />
                                    </td>
                                    <td>
                                        @if (item.Published)
                                        {
                                            <div class="badge badge-success">Hoạt động</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-success">Không hoạt động</div>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CatId"><i class="fa fa-pencil space-icon"></i>Sửa</a>
                                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.CatId"><i class="fa fa-eye space-icon"></i>Chi tiết</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CatId"><i class="fa fa-trash space-icon"></i>Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div aria-label="Page navigation example" class="card-footer text-right">
                <nav class="d-inline-block">
                    <ul class="pagination mb-0">
                        <pager list="@Model" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" />
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>