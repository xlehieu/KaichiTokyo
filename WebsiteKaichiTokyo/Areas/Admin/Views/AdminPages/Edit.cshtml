@model WebsiteKaichiTokyo.Models.Page

@{
    ViewData["Title"] = "Chỉnh sửa trang " + Model.PageName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="~/assets/summernote/summernote-bs4.min.css" rel="stylesheet" />
    <link href="~/assets/summernote/summernote.min.css" rel="stylesheet" />
}
<div class="section-header">
    <h1>Chỉnh sửa trang @Model.PageName</h1>
</div>
<div class="section-body">
    <form asp-controller="AdminPages" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PageId"/>
        <input type="hidden" asp-for="CreateDate"/>
        <input type="hidden" asp-for="Thumb"/>
        <div class="row">
            <div class="col-lg-8">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card card-secondary">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contents" class="control-label">Nội dung</label>
                            <textarea id="summernote" asp-for="Contents" class="form-control"></textarea>
                            <span asp-validation-for="Contents" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MetaDesc" class="control-label"></label>
                            <input asp-for="MetaDesc" class="form-control" />
                            <span asp-validation-for="MetaDesc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MetaKey" class="control-label"></label>
                            <input asp-for="MetaKey" class="form-control" />
                            <span asp-validation-for="MetaKey" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ordering" class="control-label"></label>
                            <input asp-for="Ordering" class="form-control" />
                            <span asp-validation-for="Ordering" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-save space-icon"></i>Lưu</button>
                            <a asp-controller="AdminPages" asp-action="Index" class="btn btn-dark"><i class="fa fa-reply space-icon"></i>Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card card-secondary">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="PageName" class="control-label">Tên trang</label>
                            <input asp-for="PageName" class="form-control" />
                            <span asp-validation-for="PageName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Thumb" class="control-label">Hình ảnh</label>
                            <input asp-for="Thumb" name="fThumb" type="file" class="form-control-file" />
                            <span asp-validation-for="Thumb" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="control-label">Trạng thái</div>
                            <label class="custom-switch mt-2" asp-for="Published">
                                <input asp-for="Published" class="custom-switch-input" />
                                <span class="custom-switch-indicator"></span>
                                <span class="custom-switch-description">Hoạt động</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/assets/summernote/summernote-bs4.min.js"></script>
    <script src="~/assets/summernote/summernote.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#summernote').summernote({
                fontNames: ['Segoe UI', 'arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 400,
                minHeight: null,
                maxHeight: null,
            });
        });
    </script>
}
