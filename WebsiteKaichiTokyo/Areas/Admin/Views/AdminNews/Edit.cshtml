@model WebsiteKaichiTokyo.Models.TinTuc

@{
    ViewData["Title"] = "Sửa tin tức " + Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="~/assets/summernote/summernote-bs4.min.css" rel="stylesheet" />
}
<div class="section-header">
    <h1>Sửa tin tức @Model.Title</h1>
</div>
<div class="section-body">
    <form asp-controller="AdminNews" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PostId" />
        <input type="hidden" asp-for="CreateDate" />
        <input type="hidden" asp-for="Thumb" />
        <div class="row">
            <div class="col-lg-8">
                <div class="card card-success">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề tin tức" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Scontents" class="control-label">Nội dung ngắn</label>
                            <input asp-for="Scontents" class="form-control" placeholder="Nhập nội dung ngắn" />
                            <span asp-validation-for="Scontents" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contents" class="control-label">Nội dung</label>
                            <textarea id="summernote" asp-for="Contents" class="form-control" placeholder="Nhập nội dung tin tức"></textarea>
                            <span asp-validation-for="Contents" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-4">
                                <div class="control-label">Trạng thái</div>
                                <label class="custom-switch mt2" asp-for="Published">
                                    <input asp-for="Published" class="custom-switch-input" />
                                    <span class="custom-switch-indicator"></span>
                                    <span class="custom-switch-description">Hoạt động</span>
                                </label>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="control-label">Tin hot</div>
                                <label asp-for="IsHot" class="custom-switch">
                                    <input asp-for="IsHot" class="custom-switch-input" />
                                    <span class="custom-switch-indicator"></span>
                                    <span class="custom-switch-description">Hoạt động</span>
                                </label>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="control-label">Tin mới</div>
                                <label asp-for="IsNewfeed" class="custom-switch">
                                    <input asp-for="IsNewfeed" class="custom-switch-input" />
                                    <span class="custom-switch-indicator"></span>
                                    <span class="custom-switch-description">Hoạt động</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save space-icon"></i>Lưu thay đổi</button>
                        <a class="btn btn-dark" asp-controller="AdminNews" asp-action="Index"><i class="fa fa-reply space-icon"></i>Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card card-success">
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="Thumb" class="control-label">Hình ảnh</label>
                            <input asp-for="Thumb" name="fThumb" class="form-control-file" type="file" accept=".jpg, .png, .jpeg, .gif" />
                            <span asp-validation-for="Thumb" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tags" class="control-label">Tag</label>
                            <input asp-for="Tags" class="form-control" placeholder="Nhập thẻ tin tức"/>
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MetaKey" class="control-label">Từ khóa SEO</label>
                            <input asp-for="MetaKey" class="form-control" placeholder="Nhập từ khóa SEO" />
                            <span asp-validation-for="MetaKey" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MetaDesc" class="control-label">Mô tả SEO</label>
                            <input asp-for="MetaDesc" class="form-control" placeholder="Nhập mô tả SEO" />
                            <span asp-validation-for="MetaDesc" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/assets/summernote/summernote-bs4.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#summernote').summernote({
                fontNames: ['Segoe UI', 'arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 500,
                minHeight: null,
                maxHeight: null,
            });
        });
    </script>
}

