@using PagedList.Core.Mvc
@model PagedList.Core.PagedList<WebsiteKaichiTokyo.Models.TinTuc>

@{
    int currentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="section-header">
    <h1>Danh sách tin tức</h1>
</div>
<div class="section-body">
    <div class="card card-info">
        <div class="card-header">
            <h4></h4>
            <div class="card-header-action">
                <a class="btn btn-outline-primary" asp-controller="AdminNews" asp-action="Create"><i class="fa fa-plus-square space-icon"></i>Thêm tin mới</a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-md">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">Tiêu đề</th>
                            <th class="text-center">Hình ảnh</th>
                            <th class="text-center">Hoạt động</th>
                            <th class="text-center">Tin nổi bật</th>
                            <th class="text-center">Tin mới</th>
                            <th class="text-center"><i class="fa fa-th"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.PostId</td>
                                    <td class="text-center width-column-table">@item.Title</td>
                                    <td class="text-center"><img src="~/images/news/@item.Thumb" data-toggle="tooltip" title="" data-original-title="@item.Title" width="35" height="35" class="rounded-circle" /></td>
                                    <td class="text-center">
                                        @if (item.Published)
                                        {
                                            <div class="badge badge-success"><i class="fa fa-check"></i></div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger"><i class="fa fa-close"></i></div>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsHot)
                                        {
                                            <div class="badge badge-success"><i class="fa fa-check"></i></div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger"><i class="fa fa-close"></i></div>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsNewfeed)
                                        {
                                            <div class="badge badge-success"><i class="fa fa-check"></i></div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger"><i class="fa fa-close"></i></div>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.PostId"><i class="fa fa-pencil space-icon"></i>Sửa</a>
                                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.PostId"><i class="fa fa-eye space-icon"></i>Chi tiết</a>
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PostId"><i class="fa fa-trash space-icon"></i>Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
